name: GKE Deployment

on:
  push:
    branches: [ main ]
    paths:
      - 'config/k8s/**'
      - '.github/workflows/cd-gke.yml'
      - 'services/**'
  workflow_dispatch:
  schedule:
    - cron: '0 12 * * *'

jobs:
  deploy:
    runs-on: ubuntu-latest
    environment: production

    steps:
    - uses: actions/checkout@v4
      
    - name: Authenticate to Google Cloud
      uses: google-github-actions/auth@v1
      with:
        credentials_json: ${{ secrets.GCP_CREDENTIALS }}
        
    - name: Set up Cloud SDK
      uses: google-github-actions/setup-gcloud@v1
      with:
        install_components: 'gke-gcloud-auth-plugin'
        
    - name: Configure Docker for Artifact Registry
      run: |
        gcloud auth configure-docker us-central1-docker.pkg.dev

    - name: Build and Push API Docker Image to Artifact Registry
      run: |
        gcloud builds submit --tag us-central1-docker.pkg.dev/${{ secrets.GCP_PROJECT_ID }}/image-service-repo/image-service:latest \
        --dockerfile=config/docker/dockerfile.api D:/Prakash/Projects/healthvision-ai-gcp/

    - name: Configure kubectl
      run: |
        gcloud container clusters get-credentials healthvision-cluster \
          --region us-central1-a \
          --project ${{ secrets.GCP_PROJECT_ID }}
        
    - name: Deploy to GKE
      run: |
        set -e
        kubectl apply -f config/k8s/ -R
        kubectl rollout status deployment/image-service || exit 1
        kubectl rollout status deployment/api-gateway || exit 1

    - name: Debug
      run: |
        kubectl get pods -n default
