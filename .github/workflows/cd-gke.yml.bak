name: GKE Deployment

on:
  push:
    branches: [ main ]
    paths:
      - 'config/k8s/**'
      - '.github/workflows/cd-gke.yml'
      - 'services/**'  # Add this to trigger on service changes
  workflow_dispatch:   # Allow manual triggers
  schedule:
    - cron: '0 12 * * *'  # Daily at 12PM UTC (optional)
      
jobs:
  deploy:
    runs-on: ubuntu-latest
    environment: production
    
    steps:
    - uses: actions/checkout@v4
      
    - name: Authenticate to Google Cloud
      uses: google-github-actions/auth@v1
      with:
        credentials_json: ${{ secrets.GCP_CREDENTIALS }}
        
    - name: Set up Cloud SDK
      uses: google-github-actions/setup-gcloud@v1
     
     - name: Install gke-gcloud-auth-plugin
  run: |
    sudo apt-get update
    sudo apt-get install -y google-cloud-cli-gke-gcloud-auth-plugin

      
    - name: Configure kubectl
      run: |
        gcloud container clusters get-credentials healthvision-cluster \
          --region us-central1-a \
          --project ${{ secrets.GCP_PROJECT_ID }}
          
    - name: Deploy to GKE
      run: |
        kubectl apply -f config/k8s/ -R
        kubectl rollout status deployment/image-service
        kubectl rollout status deployment/api-gateway
