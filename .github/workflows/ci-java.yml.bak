name: Java CI

on:
  push:
    branches: [ main ]
    paths: 
      - 'services/**'
      - '.github/workflows/ci-java.yml'
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest
    
    services:
      postgres:
        image: postgres:13
        env:
          POSTGRES_PASSWORD: postgres
        ports:
          - 5432:5432
        options: --health-cmd pg_isready --health-interval 10s --health-timeout 5s --health-retries 5

    steps:
    - uses: actions/checkout@v4
    
    - name: Set up JDK 17
      uses: actions/setup-java@v3
      with:
        java-version: '17'
        distribution: 'temurin'
        cache: 'maven'
        
    - name: Build with Maven
      run: mvn -B package --file pom.xml
      
    - name: Run tests
      run: mvn -B test
      
    - name: Build Docker images
      run: |
        docker build -t ghcr.io/${{ github.repository_owner }}/healthvision-api-gateway:latest \
          -f config/docker/Dockerfile.api \
          --build-arg JAR_FILE=services/api-gateway/target/*.jar .
          
        docker build -t ghcr.io/${{ github.repository_owner }}/healthvision-image-service:latest \
          -f config/docker/Dockerfile.api \
          --build-arg JAR_FILE=services/image-service/target/*.jar .
          
    - name: Log in to GitHub Container Registry
      uses: docker/login-action@v2
      with:
        registry: ghcr.io
        username: ${{ github.actor }}
        password: ${{ secrets.GITHUB_TOKEN }}
        
    - name: Push images to GHCR
      run: |
        docker push ghcr.io/${{ github.repository_owner }}/healthvision-api-gateway:latest
        docker push ghcr.io/${{ github.repository_owner }}/healthvision-image-service:latest